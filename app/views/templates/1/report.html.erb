		<section id="moreSaleSection">
			<div class="field">
				<div class="label"><img class="icon-section" src="http://dhg7r6mxe01qf.cloudfront.net/icons/mas_vendidos.png" alt="more_sale"></div>
				<div class="value"><h4>MÁS VENDIDOS</h4></div>
			</div>

			<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['more_sale']['list'].nil? %>
				<% @report.dynamic_attributes['sections'][2]['data_section'][0]['more_sale']['list'].each_with_index do |item_more_sale, index| %> 
					<div class="tablesItemMoreSale">
						<h4><% "#{index}"%>. <%= "#{item_more_sale['game_name']}" %></h4>
						<table class="checklistTable">
							<thead>
								<tr>
									<th>Cantidad</th>
								</tr>
							</thead>
							<tbody>
								<% item_more_sale['game_amount'].each do |product| %>
									<tr>
										<td><%= "#{product['platform']}" %></td>
										<td><%= "#{product['value']}" %></td>
									</tr>
								<% end %>
							</tbody>
						</table>
						<table class="checklistTable">
							<thead>
								<tr>
									<th>Precio</th>
								</tr>
							</thead>
							<tbody>
								<% item_more_sale['game_value'].each do |product| %>
									<tr>
										<td><%= "#{product['platform']}" %></td>
										<td>$<%= "#{product['value']}" %></td>
									</tr>
								<% end %>
							</tbody>
						</table>
						<table class="checklistTable">
							<thead>
								<tr>
									<th>SKU</th>
								</tr>
