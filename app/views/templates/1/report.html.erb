		<section id="imagesSection">
			<div class="field">
				<div class="label"><img class="icon-section" src="http://dhg7r6mxe01qf.cloudfront.net/icons/dashboard playstation-23.png" alt="category"></div>
				<div class="value"><h4>FOTOS</h4></div>
			</div>
			<% if @report.dynamic_attributes['sections'][3]['detalleFoto'].length > 0 %>
				<% @report.dynamic_attributes['sections'][3]['detalleFoto'].each do |pic| %>
					<div class="picsField">
						<div class="picLabel">
							<img src="<%= Image.find_by_detail_id_and_report_id(pic['id'], @report.id).image.url if not Image.find_by_detail_id_and_report_id(pic['id'], @report.id).nil? %>" width="90%" alt="report_pic"/>
						</div>
						<div class="commentValue">
							<h5>Comentarios</h5>
							<hr>
							<% if pic['comentario'] == "" %>
								<p>No se indica</p>
							<% else %>
								<p><%= "#{pic['comentario']}" %></p>
							<% end %>
						</div>
					</div>
				<% end %>

			<% else %>
				<p>No se registraron fotos en este reporte</p>
			<% end %>
