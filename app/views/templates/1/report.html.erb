<body>
	<div style="margin: 10px 0;">
		<img src="http://logok.org/wp-content/uploads/2014/07/Playstation-logo-colour.png" alt="dom_logo" style="width: 130px">
		<div class="formHeaders">
			<div class="formHeader">
				<div class="field ">
					<div class="label wpi-140">Tipo de reporte:</div>
					<div class="value wpi-170">Reporte diario</div>
				</div>
				<div class="field ">
					<div class="label wpi-140">Detalle solicitud:</div>
						<div class="value wpi-170">Reporte diario <%= @report.dealer_name %></div>
				</div>
				<div class="field ">
					<div class="label wpi-140">Fecha creación:</div>
							<div class="value wpi-170"><%= @report.created_at.strftime("%d/%m/%Y") %></div>
				</div>
				<div class="field">
					<div class="label wpi-140">Fecha de vencimiento:</div>
							<div class="value wpi-170"><%= @report.created_at.end_of_day.strftime("%d/%m/%Y")%></div>
				</div>
			</div>
			<div class="formHeader">
				<div class="field ">
					<div class="label wpi-60">Zona:</div>
					<div class="value"><%= @report.zone_name %></div>
				</div>
				<div class="field">
					<div class="label wpi-60">Dealer:</div>
					<div class="value"><%= @report.dealer_name %></div>
				</div>
				<div class="field">
					<div class="label wpi-60">Tienda:</div>
					<div class="value"><%= @report.store_name %></div>
				</div>
				<div class="field">
					<div class="label wpi-60">Creador reporte:</div>
					<div class="value"><%= @report.creator.full_name %></div>
				</div>
			</div>
		</div>
	</div>

	<hr>

	<h3>GEOLOCALIZACIÓN</h3>
	<div>
		<div class="map left-content">
			<img src="http://maps.googleapis.com/maps/api/staticmap?&maptype=roadmap&zoom=15&size=500x230&markers=size:mid%7Ccolor:blue%7C<%= "#{ @report.dynamic_attributes['sections'][0]['data_section'][0]['map_location']['latitude']}, #{@report.dynamic_attributes['sections'][0]['data_section'][0]['map_location']['longitude']}" %>" style="width: 100%;"/>
		</div>

		<div class="right-content">
			<div class="formHeader">
				<div class="field ">
					<div class="label wpi-80">Dirección:</div>
					<div class="value wpi-170"><%= "#{ @report.dynamic_attributes['sections'][0]['data_section'][2]['address_location']['address']}" %></div>
				</div>
				<div class="field ">
					<div class="label wpi-80">Región:</div>
						<div class="value wpi-170"><%= "#{ @report.dynamic_attributes['sections'][0]['data_section'][2]['address_location']['region']}" %></div>
				</div>
				<div class="field ">
					<div class="label wpi-80">Comuna:</div>
							<div class="value wpi-170"><%= "#{ @report.dynamic_attributes['sections'][0]['data_section'][2]['address_location']['comuna']}" %></div>
				</div>
				<div class="field">
					<div class="label wpi-80">Referencia:</div>
					<div class="value wpi-170"><%= "#{ @report.dynamic_attributes['sections'][0]['data_section'][2]['address_location']['reference']}" %></div>
				</div>
			</div>
		</div>
	</div>

	<hr>

	<h3>CHECKLIST COMERCIAL</h3>
	
	<div class="content">

		<section id="protocolSection">

			<div class="field">
				<div class="label"><img class="icon-section" src="http://dhg7r6mxe01qf.cloudfront.net/icons/protocolo.png" alt="protocol"></div>
				<div class="value"><h4>PROTOCOLO</h4></div>
			</div>
			
			<h4>Observación</h4>
			<% if not @report.dynamic_attributes['sections'][1]['data_section'][0]['protocolo']['observacion'].nil? %>
				<% if @report.dynamic_attributes['sections'][1]['data_section'][0]['protocolo']['observacion'] == "" %>
					<p>No se indica</p>
				<% else %>
					<%= "#{ @report.dynamic_attributes['sections'][1]['data_section'][0]['protocolo']['observacion']}" %>
				<% end %>
			<% else %>
				<p>No se indica</p>
			<% end %>

			<% if not @report.dynamic_attributes['sections'][1]['data_section'][0]['protocolo']['checklist'].nil? %>
				<div class="checklist">
					<% @report.dynamic_attributes['sections'][1]['data_section'][0]['protocolo']['checklist'].each do |checklist_item| %>
						<div class="field">
							<div class="value icon">
								<% if checklist_item['value'] == "true" %>
									<img class="check" src="http://d21zid65ggdxzg.cloudfront.net/801C65B140A965F51FD49B476D9219F4.png" alt="check_v" />
								<% else %>
									<img class="check" src="http://d21zid65ggdxzg.cloudfront.net/768AF9B25098A450CD52CD5B6339D3E8.png" alt="check_x" />
								<% end %>
							</div>
							<div class="labelChecklist"><%= "#{checklist_item['name']}" %></div>
						</div>
					<% end %>
				</div>
			<% else %>
				<p>No hay checklist asociado a protocolo</p>
			<% end %>

		</section>

		<hr>

		<section id="kitPuntoVentaSection">
			
			<div class="field">
				<div class="label section"><img class="icon-section" src="http://dhg7r6mxe01qf.cloudfront.net/icons/kit_pdeventa.png" alt="pos_kit"></div>
				<div class="value"><h4>KIT PUNTO DE VENTA</h4></div>
			</div>
			
			<% if not @report.dynamic_attributes['sections'][1]['data_section'][1]['kit_punto_venta']['fotos_kit_punto_venta'].nil? %>
				<div class="pictures">
					<% @report.dynamic_attributes['sections'][1]['data_section'][1]['kit_punto_venta']['fotos_kit_punto_venta'].each do |pic| %>
						<div class="picture">
							<img src="<%= Image.find_by_detail_id_and_report_id(pic['id'], @report.id).image.url if not Image.find_by_detail_id_and_report_id(pic['id'], @report.id).nil? %>" width="180px" />
						</div>
					<% end %>
				</div>
			<% else %>
				<p>No se registraron fotos en kit punto de venta</p>
			<% end %>


			<% if @report.dynamic_attributes['sections'][1]['data_section'][1]['kit_punto_venta']['checklist'].nil?  %>
				<div class="checklist">
					<% @report.dynamic_attributes['sections'][1]['data_section'][1]['kit_punto_venta']['checklist'].each do |checklist_item| %>
						<div class="field">
							<div class="value icon">
								<% if checklist_item['type'] == "boolean" %>
									<% if checklist_item['value'] == true %>
										<img class="check" src="http://d21zid65ggdxzg.cloudfront.net/801C65B140A965F51FD49B476D9219F4.png" alt="check_v" />
									<% else %>
										<img class="check" src="http://d21zid65ggdxzg.cloudfront.net/768AF9B25098A450CD52CD5B6339D3E8.png" alt="check_x" />
									<% end %>
								<% elsif checklist_item['type'] == "Cantidad" %>
									<img class="check" src="http://dhg7r6mxe01qf.cloudfront.net/icons/comentario.png" alt="check_c" />
								<% elsif checklist_item['type'] == "Observ." %>
									<img class="check" src="http://dhg7r6mxe01qf.cloudfront.net/icons/observacion.png" alt="check_o" />
								<% end %>
							</div>
							<div class="labelChecklist"><%= "#{checklist_item['name']}" %></div>
						</div>
					<% end %>
				</div>
			<% else %>
				<p>No se registró checklist para kit punto de venta</p>
			<% end %>
			
			<% if not @report.dynamic_attributes['sections'][1]['data_section'][1]['kit_punto_venta']['checklist'].nil? %>
				<h4>Detalles</h4>
				<hr align="left" width="50%">
				<% @report.dynamic_attributes['sections'][1]['data_section'][1]['kit_punto_venta']['checklist'].each do |checklist_item| %>
					<% if not checklist_item['detalle'].nil? %>
						<div class="field">
							<div class="label wpi-120">Item checklist:</div>
							<div class="value"><%= "#{checklist_item['name']}" %></div>
						</div>
						<div class="field">
							<div class="label wpi-120">Cual:</div>
							<% if not checklist_item['detalle']['cual'].nil? %>
								<div class="value"><%= "#{checklist_item['detalle']['cual']}" %></div>
							<% else %>
								<div class="value"> - </div>
							<% end %>
						</div>
						<div class="field">
							<div class="label wpi-120">Observación:</div>
							<% if not checklist_item['detalle']['observacion'].nil? %>
								<div class="value"><%= "#{checklist_item['detalle']['observacion']}" %></div>
							<% else %>
								<div class="value"> - </div>
							<% end %>
						</div>
						<div class="field">
							<div class="label wpi-120">Cantidad:</div>
							<% if not checklist_item['detalle']['cantidad'].nil? %>
								<div class="value"><%= "#{checklist_item['detalle']['cantidad']}" %></div>
							<% else %>
								<div class="value"> - </div>
							<% end %>
						</div>
						<div class="field">
							<div class="label wpi-120">Fotos:</div>
							<div class="value"></div>
						</div>
						
						<div class="pictures">
							<% if checklist_item['detalleFoto'].length > 0 %>
								<% checklist_item['detalleFoto'].each do |pic| %>
									<div class="picture">
										<img src="<%= Image.find_by_detail_id_and_report_id(pic['id'], @report.id).image.url if not Image.find_by_detail_id_and_report_id(pic['id'], @report.id).nil? %>" width="180px" /> 
									</div>
								<% end %>
							<% end %>
						</div>

						<hr align="left" width="50%">
					<% end %>
				<% end %>
			<% end %>

		</section>

		<hr>

		<h3>CHECKLIST PRODUCTOS</h3>

		<section id="stockSection">

			<div class="field">
				<div class="label"><img class="icon-section" src="http://dhg7r6mxe01qf.cloudfront.net/icons/stock.png" alt="stock"></div>
				<div class="value"><h4>STOCK</h4></div>
			</div>

			
			<div class="checklistTableContainer">
				<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['sr_hardware'].nil? %>
					<table class="checklistTable">
						<thead>
							<tr>
								<th>Stock real hardware</th>
							</tr>
						</thead>
						<tbody>
							<% @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['sr_hardware'].each do |stock_hardware| %>
								<tr>
									<td><%= "#{stock_hardware['platform']}" %></td>
									<td>$ <%= "#{stock_hardware['value']}" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% else %>
					<p style="margin-right: 10px;">No se registró el stock real de hardware</p>
				<% end %>
				
				<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['sr_accesories'].nil? %>
					<table class="checklistTable">
						<thead>
							<tr>
								<th>Stock real accesorios</th>
							</tr>
						</thead>
						<tbody>
							<% @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['sr_accesories'].each do |stock_accessory| %>
								<tr>
									<td><%= "#{stock_accessory['platform']}" %></td>
									<td>$ <%= "#{stock_accessory['value']}" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% else %>
					<p style="margin-right: 10px;">No se registró el stock real de accesorios</p>
				<% end %>

				<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['sr_games'].nil? %>
					<table class="checklistTable">
						<thead>
							<tr>
								<th>Stock real juegos</th>
							</tr>
						</thead>
						<tbody>
							<% @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['sr_games'].each do |stock_game| %>
								<tr>
									<td><%= "#{stock_game['platform']}" %></td>
									<td>$ <%= "#{stock_game['value']}" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% else %>
					<p style="margin-right: 10px;">No se registró el stock real de juegos</p>
				<% end %>

			</div>

			<div class="checklistTableContainer">
				<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['hc_promot_ft'].nil? %>
					<table class="checklistTable">
						<thead>
							<tr>
								<th>HC Promotores Fulltime</th>
							</tr>
						</thead>
						<tbody>
							<% @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['hc_promot_ft'].each do |hc_promoter_ft| %>
								<tr>
									<td><%= "#{hc_promoter_ft['platform']}" %></td>
									<td><%= "#{hc_promoter_ft['value']}" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% else %>
					<p style="margin-right: 10px;">No se registró head count de promotores full time</p>
				<% end %>

				<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['hc_promot_pt'].nil? %>
					<table class="checklistTable">
						<thead>
							<tr>
								<th>HC Promotores Part-time</th>
							</tr>
						</thead>
						<tbody>
							<% @report.dynamic_attributes['sections'][2]['data_section'][0]['stock']['amount_value'][0]['hc_promot_pt'].each do |hc_promoter_pt| %>
								<tr>
									<td><%= "#{hc_promoter_pt['platform']}" %></td>
									<td><%= "#{hc_promoter_pt['value']}" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% else %>
					<p style="margin-right: 10px;">No se registró head count de promotores part time</p>
				<% end %>

			</div>
		</section>

		<section id="saleSection">
			<div class="field">
				<div class="label"><img class="icon-section" src="http://dhg7r6mxe01qf.cloudfront.net/icons/venta.png" alt="sale"></div>
				<div class="value"><h4>VENTA</h4></div>
			</div>

			<div class="checklistTableContainer">
				<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['ventas']['amount_value'][0]['vr_hardware'].nil? %>
					<table class="checklistTable">
						<thead>
							<tr>
								<th>Valor real hardware</th>
							</tr>
						</thead>
						<tbody>
							<% @report.dynamic_attributes['sections'][2]['data_section'][0]['ventas']['amount_value'][0]['vr_hardware'].each do |vr_hardware| %>
								<tr>
									<td><%= "#{vr_hardware['platform']}" %></td>
									<td>$ <%= "#{vr_hardware['value']}" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% else %>
					<p style="margin-right: 10px;">No se registraron ventas de hardware</p>
				<% end %>
				
				<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['ventas']['amount_value'][0]['vr_accesories'].nil? %>
					<table class="checklistTable">
						<thead>
							<tr>
								<th>Valor real accesorios</th>
							</tr>
						</thead>
						<tbody>
							<% @report.dynamic_attributes['sections'][2]['data_section'][0]['ventas']['amount_value'][0]['vr_accesories'].each do |vr_accesory| %>
								<tr>
									<td><%= "#{vr_accesory['platform']}" %></td>
									<td>$ <%= "#{vr_accesory['value']}" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% else %>
					<p style="margin-right: 10px;">No se registraron ventas de accesorios</p>
				<% end %>

				<% if not @report.dynamic_attributes['sections'][2]['data_section'][0]['ventas']['amount_value'][0]['vr_games'].nil? %>
					<table class="checklistTable">
						<thead>
							<tr>
								<th>Valor real juegos</th>
							</tr>
						</thead>
						<tbody>
							<% @report.dynamic_attributes['sections'][2]['data_section'][0]['ventas']['amount_value'][0]['vr_games'].each do |vr_game| %>
								<tr>
									<td><%= "#{vr_game['platform']}" %></td>
									<td>$ <%= "#{vr_game['value']}" %></td>
								</tr>
